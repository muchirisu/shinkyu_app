<div class="main newuser-show">
  <div class="container">
    <div class="newuser">
      <img src="<%= "/newuser_images/#{@newuser.image}" %>">
      <h2><%= @newuser.name %></h2>
      <% if !@current_newuser.nil? %>
        <% if @newuser.id == @current_newuser.id %>
          <%= link_to("編集", "/newusers/#{@newuser.id}/edit") %>
        <% end %>
      <% end %>
    </div>
    
    <ul class="newuser-tabs">
      <li><%= link_to("投稿", "/newusers/#{@newuser.id}") %></li>
      <li><%= link_to("いいね!", "/newusers/#{@newuser.id}/likes") %></li>
      <li class="active"><%= link_to("プロフィール", "/newusers/#{@newuser.id}/profile") %></li>
    </ul>
    <div class="newposts-index-item">
      <div class="newusers-profile">
        <ul>
          <li><%= @newuser.name %></li>
          <li><%= @newuser.content %></li>
          <li><%= @newuser.address %></li>
          <li><%= @newuser.access %></li>
          <li><%= @newuser.email %></li>
        </ul>
      </div>
    </div>
    </div>
  </div>
</div>