<div class="main newusers-show">
  <div class="container">
    <div class="newuser">
      <img src="<%= "/newuser_images/#{@newuser.image}" %>" alt="ユーザー画像">
      <h2><%= @newuser.name %></h2>
      <% if !@current_newuser.nil? && @newuser.id == @current_newuser.id %>
        <%= link_to("ユーザー情報編集", "/newusers/#{@newuser.id}/edit") %>
      <% end %>
      <% if !@current_newuser.nil? && @newuser.id != @current_newuser.id %>
        <a href="#" class="btn-follow-big">★フォローする</a>
      <% end %>
    </div>
    
    <ul class="newuser-tabs">
      <% if !@current_newuser.nil? && @current_newuser.user_type==2 %>
        <li><%= link_to("投稿", "/newusers/#{@newuser.id}") %></li>
        <li class="active"><%= link_to("プロフィール", "/newusers/#{@newuser.id}/profile") %></li>
        <li><%= link_to("フォロワー", "/newusers/#{@newuser.id}/follower") %></li>
      <% end %>
      <li><%= link_to("フォロー中", "/newusers/#{@newuser.id}/following") %></li>
      <li><%= link_to("いいね", "/newusers/#{@newuser.id}/likes") %></li>
    </ul>
    <div class="newposts-index-item">
      <div class="newuser-profile">
        <ul>
          <div class="newuser-profile-list">
            <li class="newuser-profile-item">名前<%= @newuser.name %></li>
            <li class="newuser-profile-item">一言<%= @newuser.content %></li>
            <li class="newuser-profile-item">住所<%= @newuser.address %></li>
            <li class="newuser-profile-item">アクセス<%= @newuser.access %></li>
            <li class="newuser-profile-item">メールアドレス<%= @newuser.email %></li>
          </div>
        </ul>
      </div>
    </div>
    </div>
  </div>
</div>