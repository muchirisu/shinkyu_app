<div class="main newposts-new">
  <div class="container">
    <h1 class="form-head">編集する</h1>
    <%= form_tag("/newposts/#{@newpost.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <% @newpost.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <textarea name="content"><%= @newpost.content %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>