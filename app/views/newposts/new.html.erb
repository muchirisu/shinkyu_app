<div class="main newposts-new">
  <div class="container">
    <%= form_tag("/newposts/create") do %>
      <div class="form">
        <div class="form-body">
          <% @newpost.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <textarea name="content" placeholder="200文字以内で入力してください"><%= @newpost.content%></textarea>
          <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>

  
</div>