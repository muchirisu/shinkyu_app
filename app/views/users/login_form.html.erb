<div class="main users-new">
  <div class="container">
    <div class="form-head">ユーザーログイン</div>
      <div class="form users-form">
        <div class="form-body">
          <% if @error_message %>
            <div class="form-error">
              <%= @error_message %>
            </div>
          <% end %>
          <%= form_tag("/users/login") do %>
            <p>メールアドレス</p>
            <input name="email" velue="<%= @email %>">
            <p>パスワード</p>
            <input type="password" name="password" @password = params[:password]>
            <input type="submit" value="ログイン">
          <% end %>
        </div>
      </div>
  </div>
</div>